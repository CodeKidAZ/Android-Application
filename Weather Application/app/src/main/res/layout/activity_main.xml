                android:id="@+id/Lwindspeed" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Twindspeed" />
        </TableRow>

        <TableRow android:background="#dff6fa">
            <TextView
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/PdiffWindspeed" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/LdiffWindspeed" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/TdiffWindspeed" />
        </TableRow>
        <TableRow android:background="#92e3fe">
            <TextView
                android:text="Cloudiness"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Pcloudiness" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Lcloudiness" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Tcloudiness" />
        </TableRow>

        <TableRow android:background="#dff6fa">
            <TextView
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/PdiffCloudiness" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/LdiffCloudiness" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/TdiffCloudiness" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:id="@+id/refreshButton"
                android:layout_column="0"
                android:onClick="refreshWithRandomData" />

            <Button
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="Map Phoenix"
                android:id="@+id/mapPhoenixButton"
                android:layout_column="2"
                android:onClick="mapPhoenix"
                android:layout_span="2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:id="@+id/button"
                android:layout_column="0"
                android:onClick="showDetails"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map London"
                android:id="@+id/mapLondonButton"
                android:layout_column="2"
                android:layout_span="2"
                android:onClick="mapLondon" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map Tokyo"
                android:id="@+id/mapTokyoButton"
                android:layout_column="2"
                android:layout_span="2"
                android:onClick="mapTokyo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Del Shared Pref"
                android:id="@+id/deleteShPref"
                android:layout_column="0"
                android:onClick="delShPref"
                android:capitalize="none"
                android:layout_span="3" />
