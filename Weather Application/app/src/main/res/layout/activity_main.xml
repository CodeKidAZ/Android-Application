<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sumit.snair9_lab7_ecpart1.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_height="10dip"
            android:background="#000"/>
        <TextView
            android:text="WEATHER APP"
            android:textAlignment="center"
            android:textColor="#000"
            android:background="#6acae9"/>


        <TableRow>

            <TextView
                android:text="City"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:padding="3dip"
                android:layout_width="wrap_content" />
            <TextView
                android:text="Phoenix"
                android:textAlignment="center"
                android:padding="3dip"
                android:layout_width="70dp" />
            <TextView
                android:text="London"
                android:textAlignment="center"
                android:padding="3dip"
                android:layout_width="70dp" />
            <TextView
                android:text="Tokyo"
                android:textAlignment="center"
                android:padding="3dip"
                android:layout_width="70dp" />
        </TableRow>
        <TableRow android:background="#ffffff"
            android:layout_height="5dp">
            <TextView />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Country Code"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="US"
                android:textAlignment="center"
                android:padding="3dip" />
            <TextView
                android:text="GB"
                android:textAlignment="center"
                android:padding="3dip" />
            <TextView
                android:text="JP"
                android:textAlignment="center"
                android:padding="3dip" />
        </TableRow>
        <!-- new data   -->
        <TableRow android:background="#92e3fe">

            <TextView
                android:text="Timestamp"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Ptimestamp" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Ltimestamp" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Ttimestamp" />
        </TableRow>
        <TableRow android:background="#dff6fa">
            <TextView
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/PdiffTimestamp" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/LdiffTimestamp" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/TdiffTimestamp" />
        </TableRow>
        <TableRow android:background="#92e3fe">
            <TextView
                android:text="Temperature"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Ptemperature" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Ltemperature" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Ttemperature" />
        </TableRow>

        <TableRow android:background="#dff6fa">
            <TextView
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/PdiffTemperature" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/LdiffTemperature" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/TdiffTemperature" />
        </TableRow>
        <TableRow android:background="#92e3fe">
            <TextView
                android:text="Humidity"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Phumidity" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Lhumidity" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Thumidity" />
        </TableRow>

        <TableRow android:background="#dff6fa">
            <TextView
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/PdiffHumidity" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/LdiffHumidity" />
            <TextView
                android:text="diff"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/TdiffHumidity" />
        </TableRow>
        <TableRow android:background="#92e3fe">
            <TextView
                android:text="Windspeed"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text="     "
                android:gravity="right"
                android:padding="3dip" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/Pwindspeed" />
            <TextView
                android:text="0"
                android:textAlignment="center"
