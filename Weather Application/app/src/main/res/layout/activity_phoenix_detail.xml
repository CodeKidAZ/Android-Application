        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_height="10dip"
            android:background="#000"/>
        <TextView
            android:text="WEATHER DETAILS"
            android:textAlignment="center"
            android:textColor="#000"
            android:background="#6acae9"/>

        <TableRow>

            <TextView
                android:text="City"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text=" "
                android:padding="3dip"
                android:layout_width="wrap_content" />
            <TextView
                android:text="Phoenix"
                android:textAlignment="center"
                android:padding="3dip"
                android:layout_width="wrap_content" />
            <TextView
                android:text="London"
                android:textAlignment="center"
                android:padding="3dip"
                android:layout_width="wrap_content" />
            <TextView
                android:text="Tokyo"
                android:textAlignment="center"
                android:padding="3dip"
                android:layout_width="wrap_content" />
        </TableRow>
        <TableRow android:background="#ffffff"
            android:layout_height="5dp">
            <TextView />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Country Code"
                android:textAlignment="viewStart"
                android:padding="3dip" />
            <TextView
                android:text=" "
                android:gravity="right"
                android:padding="3dip"
                android:layout_width="wrap_content" />
            <TextView
                android:text="US"
                android:textAlignment="center"
                android:padding="3dip" />
            <TextView
                android:text="GB"
                android:textAlignment="center"
                android:padding="3dip" />
            <TextView
                android:text="JP"
                android:textAlignment="center"
                android:padding="3dip" />
        </TableRow>
        <!-- new data   -->

        <TableRow android:background="#dff6fa">
            <TextView
                android:textAlignment="viewStart"
                android:padding="3dip"
                android:text="Temperature" />
            <TextView
                android:text=" "
                android:gravity="right"
                android:padding="3dip"
                android:layout_width="wrap_content" />
            <TextView
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/PDtemperature" />
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:padding="3dip"
                android:id="@+id/LDtemperature" />
            <TextView
                android:text="0"
                android:textAlignment="center"
